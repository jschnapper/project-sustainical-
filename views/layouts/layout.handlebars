      <div class="header clearfix">
        <nav>
          <h3 class="text-muted" id="logo">SustainiCal</h3>
          <ul class="nav nav-pills pull-right" id="navbar">
            {{#if user}}
              <li class="nav-items" role="presentation"><a href="/">Dashboard</a></li>
              <li class="nav-items" role="presentation"><a href="/users/trends">Trends</a></li>
              <li class="nav-items" role="presentation"><a href="/users/about">About</a></li>
              <li class="nav-items" role="presentation"><a href="/users/resourceslogin">Resources</a></li>
<!--               <li class="nav-items" role="presentation"><a href="/users/profile">Profile</a></li> -->
