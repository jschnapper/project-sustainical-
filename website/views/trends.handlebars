				</tr>
				<tr>
					<td>2</td>
					<td>Priestley</td>
					<td>960</td>
					<td>decreasing consumption</td>
					<td>350</td>
					<td>decreasing consumption</td>
				</tr>
				<tr>
					<td>3</td>
					<td>Beverly Cleary</td>
					<td>950</td>
					<td>increasing consumption</td>
					<td>380</td>
					<td>increasing consumption</td>
				</tr>
				<tr>
					<td>4</td>
					<td>Norton</td>
					<td>1020</td>
					<td>decreasing consumption</td>
					<td>345</td>
					<td>increasing consumption</td>
				</tr>
				<tr>
					<td>5</td>
					<td>Spens-Black</td>
					<td>1050</td>
					<td>decreasing consumption</td>
					<td>355</td>
					<td>increasing consumption</td>
				</tr>
			</table>
